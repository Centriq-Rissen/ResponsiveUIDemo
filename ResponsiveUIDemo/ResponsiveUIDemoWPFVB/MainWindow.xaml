<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="177" Width="525">
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="6" />
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel Orientation="Horizontal" Height="50" HorizontalAlignment="Center"  >
            <Button Content="Threadpool Method" Height="23" Name="cmdDispatcher" Width="150" Click="cmdDispatcher_Click" />
            <Button Content="Background Worker" Height="23" Name="cmdBackGroundWorker" Width="150" Click="cmdBackGroundWorker_Click" />
            <Button Content="Progress Reporting Pattern" Height="23" Name="cmdTAPMethod" Width="150" />
        </StackPanel>
        <ProgressBar Height="21" HorizontalAlignment="Left" Margin="22,100,0,0" Name="progressBar1" VerticalAlignment="Top" Width="480" Value="0" Minimum="0" />
    </Grid>
</Window>
